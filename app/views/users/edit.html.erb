<% content_for :head do %>
    <title>Faça seu cadastro</title>
    <link rel="stylesheet" href="/assets/questionnaire.css">
    <link rel="stylesheet" href="/assets/jquery-ui.css">
    <link rel="stylesheet" href="/assets/jquery-ui.structure.css">
    <link rel="stylesheet" href="/assets/jquery-ui.theme.css">
<style>
    .erros {
        margin: 0;
    }
    body, option {
        background-color: #097e74;
        background-image: url('/assets/FC3.png');
    }
    .btn-1 {
        margin: 0 auto;
        display: block;
        max-width: 100%;
        white-space: normal;
    }
    .container {
        margin-top: 2em;
    }
    .header, .div-user {
        display: inline-block;
        width: 100%;
    }
    h1, p {
        font-family: ProximaNovaSoft-Bold;
    }
    .form-content {
        width: 100%;
        margin-bottom: 2em;
    }
    h1 {
        color: #d8b212;
        display: table;
        margin: auto;
        font-size: 4em;
        text-shadow: -.1em 0 #582985;
        transform: rotate(-2deg);
        text-transform: uppercase;
    }

    p {
        color: #582985;
        display: block;
        text-transform: uppercase;
        margin: 2em 0 1em 0;
        padding: 0 1em;
    }
    #busca_cidade, #busca_cidade~input {
        display: none;
    }
    #busca_cidade:checked~input {
        display: block;
    }
    #busca_cidade + label {
        cursor: pointer;
        color: #d8b212;
    }
    #city_name {
        color: #fff;
        font-weight: bold;
        margin-left: .8em;
    }
    @media screen and (min-width: 1000px) {
        h1 {
            position: relative;
            font-size: 6em;
            float: left; 
            width: 58%; 
            left: .5em;
        }
        p {
            position: relative; 
            top: 5em; 
            width: 100%; 
            left: -6em; 
            font-size: 1em; 
        }
    }
    @media screen and (min-width: 1200px) {
        h1 {
            width: 40%;
        }
        p {
            left: -3em;
        }
    }
</style>
<% end %>

<% content_for :main do %>
<div class="container">
   <div class="header">
    <h1>Crie sua conta</h1>
    <p>Informe a cidade em que você vota. Se quiser receber mais informações sobre a campanha, deixe também seu nome, e-mail, e número de celular</p>
   </div>
    <div class="form-content">
        <div id="div-user form-horizontal">
            <%= form_for @user do |f| %>
                <% if @user.errors[:name].count > 0 %>
                <div class="alert alert-danger" role="alert">
                    <ul class="erros">
                        <% @user.errors[:name].each do |msg| %>
                        <li class="erro"><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>
                <div class="form-group row">
                    <%= f.label :name, {class: "col-lg-2 control-label"} %>
                    <div class="col-lg-10">
                        <%= f.text_field :name, {class: "form-control"} %>
                    </div>
                </div>
                <%if not @user.email_validated? %>
                    <% if @user.errors[:email].count > 0 %>
                    <div class="alert alert-danger" role="alert">
                        <ul class="erros">
                            <% @user.errors[:email].each do |msg| %>
                            <li class="erro"><%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
                    <% end %>
                    <div class="form-group row">
                        <%= f.label :email, "Email", {class: "col-lg-2 control-label"} %>
                        <div class="col-lg-10">
                            <%= f.text_field :email, {class: "form-control col-lg-10", required: "required"} %>
                        </div>
                    </div>
                <% end %>
                <% if @user.errors[:city_id].count > 0 %>
                <div class="alert alert-danger" role="alert">
                    <ul class="erros">
                        <% @user.errors[:city_id].each do |msg| %>
                        <li class="erro"><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>
                <div class="form-group row">
                    <%= f.label :city_id, "Cidade em que vota *", {class: "col-lg-2 control-label"} %>
                    <div class="col-lg-10">
                        <%= f.hidden_field :city_id %>
                        <input type="text" id="city_name" class="form-control" value= '<%= "#{@user.city.name}, #{@user.city.state}" if @user.city %>'>
                    </div>
                </div>
                <% if @user.errors[:mobile_phone].count > 0 %>
                <div class="alert alert-danger" role="alert">
                    <ul class="erros">
                        <% @user.errors[:mobile_phone].each do |msg| %>
                        <li class="erro"><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>
                <div class="form-group row">
                    <%= f.label :mobile_phone, "Celular", {class: "col-lg-2 control-label"} %>
                    <div class="col-lg-10">
                        <%= f.text_field :mobile_phone, {class: "form-control col-lg-10 phone-input"} %>
                    </div>
                </div>
                <%= f.hidden_field :candidate_id %>
                <%= f.hidden_field :picture %>
                <div class="buttons">
                    <%= f.submit "E ai, vamos lá? Faça o seu questionário!", {class: "btn btn-1"} %>
                </div>
            <% end %>
        </div>
    </div>    
</div>
<% end %>

<% content_for :scripts do %>
    <script src="/assets/cidades.js"></script>
    <script>
        ligaCidades("#city_name", function(erro, dados){
            $("#user_city_id").val(dados.id);
        });
    </script>
<% end %>
